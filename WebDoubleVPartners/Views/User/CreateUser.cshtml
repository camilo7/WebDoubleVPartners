@model WebDoubleVPartners.Models.Inputs.UserInput

@{
    ViewData["Title"] = "Create User";
}

<head>
</head>

<body>
    <div class="container">
        <h2>Create User</h2>

        <form asp-action="SaveUser" method="post">
            <div class="form-group">
                <label asp-for="UserName">Username</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pass">Password</label>
                <input asp-for="Pass" type="password" class="form-control" />
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>

            <br />

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}